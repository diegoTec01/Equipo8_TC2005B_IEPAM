@model ModeloCursosRegistro
@{
    Layout = "_LayoutCreador";
    ViewData["Title"] = "AportarConocimiento";
}

<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Curso1</title>

    <link href="~/css/navbar.css" rel="stylesheet" type="text/css" />
    <link href="~/css/footer.css" rel="stylesheet" type="text/css" />

    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_integrador.styles.css" asp-append-version="true" />



    <link href="~/css/DiegoCurso1_min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body style="background: #ddcee8;">
    <div>

        <div style="margin:auto; width: 100%;">
            <h2 style="text-align: center; padding: 40px 0">
                Formulario para llegar los datos del curso:
            </h2>
        </div>

        <!--
            <form asp-action="Signup" asp-controller="Home" method="post">
            <input asp-for="Nombre" type="text" placeholder="Nombre(s)" required/>
            <input asp-for="Apellido" type="text" placeholder="Apellido(s)" required />
            <input asp-for="Usuario" type="text" placeholder="Usuario" required />
            <input asp-for="Email" type="text" placeholder="Email" required />
            <input asp-for="Password" type="text" placeholder="Password" required />
            <input asp-for="Creador" type="checkbox" placeholder="Creador" required />
            <a asp-area="" asp-controller="Home" asp-action="Login">Tengo cuenta</a>
            <button type="submit" class="submit">Registrarse</button>
        </form>-->


        <div style="margin:auto; width:85%; text-align:center">
            <form asp-action="AportarConocimiento" asp-controller="Home" method="post">

                <div class="row">
                    <div class="col" style="width:30%">
                        <div class="mb-3" style="text-align: center">
                            <label for="id_creador" class="form-label">Id_creador: </label>
                            <input asp-for="Id_creador" type="number" class="form-control" id="id_creador" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">Insertar el valor numérico de id.</div>
                        </div>
                    </div>
                    <div class="col" style="width:70%">
                        <div class="mb-3">
                            <label for="nombre_curso" class="form-label">Nombre del curso:</label>
                            <input asp-for="Nombre" type="text" class="form-control" id="nombre_curso">
                            <div id="emailHelp" class="form-text">Nombre a desplegar en la tarjeta del curso.</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Área del curso:</label>
                            <select class="form-select" asp-for="Area" aria-label="Default select example">
                                <option selected>Artes</option>
                                <option>Biología</option>
                                <option>Carpintería</option>
                                <option>Ciencias aplicadas</option>
                                <option>Ciencias naturales</option>
                                <option>Ciencias Sociales</option>
                                <option>Derecho</option>
                                <option>Economía</option>
                                <option>Gastronomía</option>
                                <option>Historia</option>
                                <option>Ingeniería</option>
                                <option>Mecánica</option>
                                <option>Medicina</option>
                                <option>Negocios</option>
                                <option>Plomería</option>
                                <option>Política</option>
                                <option>Tecnología</option>
                                <option>Otro</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Tema:</label>
                            <input asp-for="Tema" type="text" class="form-control" id="exampleInputPassword1">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Dificultad:</label>
                            <select class="form-select" asp-for="Dificultad" aria-label="Default select example">
                                <option selected>Básico</option>
                                <option>Intermedio</option>
                                <option>Avanzado</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Título:</label>
                            <input asp-for="Titulo" type="text" class="form-control" id="exampleInputPassword1">
                            <div id="emailHelp" class="form-text">Título a desplegar dentro del curso.</div>
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Frase inicio:</label>
                    <input asp-for="Frase_inicio" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">Frase inicial que acompañará al título del curso.</div>
                </div>



                <div class="row">
                    <div class="col">
                        <label for="exampleInputPassword1" class="form-label">Subtitulo 1:</label>
                        <input asp-for="Subtitulo_1" type="text" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="col">
                        <label for="exampleInputPassword1" class="form-label">Subtitulo 2:</label>
                        <input asp-for="Subtitulo_2" type="text" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="col">
                        <label for="exampleInputPassword1" class="form-label">Subtitulo 3:</label>
                        <input asp-for="Subtitulo_3" type="text" class="form-control" id="exampleInputPassword1">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="exampleInputPassword1" class="form-label">Contenido subtitulo 1:</label>
                        <!--<input asp-for="Contenido_sub_1" type="text" class="form-control" id="exampleInputPassword1">-->
                        <textarea asp-for="Contenido_sub_1" type="text" class="form-control" id="exampleInputPassword1"></textarea>
                    </div>
                    <div class="col" style="width:65%">
                        <label for="exampleInputPassword1" class="form-label">Contenido subtitulo 2:</label>
                        <!--<input asp-for="Contenido_sub_1" type="text" class="form-control" id="exampleInputPassword1">-->
                        <textarea asp-for="Contenido_sub_2" type="text" class="form-control" id="exampleInputPassword1"></textarea>
                    </div>
                    <div class="col" style="width:65%">
                        <label for="exampleInputPassword1" class="form-label">Contenido subtitulo 3:</label>
                        <!--<input asp-for="Contenido_sub_1" type="text" class="form-control" id="exampleInputPassword1">-->
                        <textarea asp-for="Contenido_sub_3" type="text" class="form-control" id="exampleInputPassword1"></textarea>
                    </div>
                </div>




                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Frase 1:</label>
                    <input asp-for="Frase_1" type="text" class="form-control" id="exampleInputPassword1">
                    <div id="emailHelp" class="form-text">Frase o dato interesante.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Frase 2:</label>
                    <input asp-for="Frase_2" type="text" class="form-control" id="exampleInputPassword1">
                    <div id="emailHelp" class="form-text">Frase o dato interesante.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Video 1:</label>
                    <input asp-for="Video_1" type="text" class="form-control" id="exampleInputPassword1">
                    <div id="emailHelp" class="form-text">Insertar alguna liga de video (no short) youtube.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Video 2:</label>
                    <input asp-for="Video_2" type="text" class="form-control" id="exampleInputPassword1">
                    <div id="emailHelp" class="form-text">Insertar alguna liga de video (no short) youtube.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Imagen para el curso:</label>
                    <input asp-for="Img" type="text" class="form-control" id="exampleInputPassword1">
                    <div id="emailHelp" class="form-text">Insertar liga de la imagen.</div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            @if (TempData["FailAlert"] != null)
            {
                <div class="alertF">
                    @TempData["FailAlert"]
                </div>
            }
            <h2>&nbsp;</h2>

            <div style="margin:auto; width:85%;">
                <label class="form-label" style="margin:auto; width: 100%;">Video ilustrativo sobre cómo llenar los campos de videos e imagen.</label>
                <iframe src="https://www.youtube.com/embed/aXTP8xLYres" style="margin:auto; width: 100%; height: 400px; border:none;"></iframe>
            </div>

        </div>

    </div>

</body>

</html>